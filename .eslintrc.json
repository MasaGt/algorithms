{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": 1, // warns if there is no ; at the end of a line
        "singleQuote": 0,
        "no-extra-semi": 0,
        "no-constant-condition": 0,
        "prefer-const": 0
    }
}
